<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>


<VBox
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="darwinWorld.controllers.SimulationController"
        prefWidth="1000"
        prefHeight="800"
>
   <children>
      <ToolBar prefHeight="40.0" VBox.vgrow="NEVER">
         <items>
            <Button mnemonicParsing="false" text="STOP" />
         </items>
      </ToolBar>
      <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">
         <items>
            <ScrollPane fitToWidth="true" fitToHeight="true">
            </ScrollPane>
            <ScrollPane fitToWidth="true" fitToHeight="true">
               <content>
                  <GridPane fx:id="mapGridPane" gridLinesVisible="true" VBox.vgrow="ALWAYS">
                  </GridPane>
               </content>
            </ScrollPane>
         </items>
      </SplitPane>
   </children>
</VBox>
